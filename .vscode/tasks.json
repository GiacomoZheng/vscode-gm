{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"tasks": [
		{
			"type": "npm",
			"script": "install",
			"problemMatcher": []
		},
		{
            "label": "update ahk",
            "type": "shell",
            "command": "autohotkey .\\plugins\\AutoHotkey\\gm.ahk;",
            "group": "build",
            "presentation": {
                // Reveal the output only if unrecognized errors occur.
                "reveal": "silent"
            },
            // Use the standard MS compiler pattern to detect errors, warnings and infos
            "problemMatcher": "$msCompile"
        },
        {
            "label": "update-grammar",
            "type": "shell",
            "command": "cd C:\\Users\\admin\\Documents\\GitHub\\vscode-gm; cp -r -Force out C:\\Users\\admin\\.vscode-insiders\\extensions\\vscode-gm; cp -r -Force snippets C:\\Users\\admin\\.vscode-insiders\\extensions\\vscode-gm; cp -r -Force syntaxes C:\\Users\\admin\\.vscode-insiders\\extensions\\vscode-gm; cp -r -Force themes C:\\Users\\admin\\.vscode-insiders\\extensions\\vscode-gm; cp -Force language-configuration.json C:\\Users\\admin\\.vscode-insiders\\extensions\\vscode-gm; cp -Force package.json C:\\Users\\admin\\.vscode-insiders\\extensions\\vscode-gm; cp -Force README.md C:\\Users\\admin\\.vscode-insiders\\extensions\\vscode-gm;",
            "group": "build",
            "presentation": {
                "reveal": "silent"
            },
            "problemMatcher": "$msCompile"
        }
	]
}
