{
	"comments": {
		"lineComment": ";",
		"blockComment": ["[\"", "\"]"]
	},
	"brackets": [
    	["{", "}"],
		["[", "]"],
		["(", ")"],
		["%", "%"],
		["&", "&"]
	],
	"autoClosingPairs": [
		{ "open": "{", "close": "}", "notIn": [ "comment", ] },
		{ "open": "[", "close": "]", "notIn": [ "comment", ] },
		{ "open": "(", "close": ")", "notIn": [ "comment", ] },
		{ "open": "%", "close": "%", "notIn": [ "comment", "string", ] }, // for special symbols
		{ "open": "&", "close": "&", "notIn": [ "comment", "string", ] }, // to unpackage the symbols
		{ "open": "\"", "close": "\"", "notIn": [ "string", ] }
	],
	"surroundingPairs": [
		["{", "}"],
		["[", "]"],
		["(", ")"],
		["%", "%"],
		["&", "&"],
		["\"", "\""]
    ]
}
