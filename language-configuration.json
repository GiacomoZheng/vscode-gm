{
	"comments": {
		"lineComment": ";",
		"blockComment": ["[", "]"]
	},
	"brackets": [
    	["{", "}"],
		["[", "]"],
		["(", ")"]
	],
	"autoClosingPairs": [
		{ "open": "{", "close": "}", "notIn": [ "comment", ] },
		{ "open": "[", "close": "]", "notIn": [ "comment", ] },
		{ "open": "(", "close": ")", "notIn": [ "comment", ] },
		{ "open": "%", "close": "%", "notIn": [ "comment", "string", ] }, // for special symbols
		{ "open": "&", "close": "&", "notIn": [ "comment", "string", ] }, // to unpackage the symbols
		{ "open": "\"", "close": "\"", "notIn": [ "string", ] },
		{ "open": "p\"", "close": "\"", "notIn": ["string", "comment"] },
		{ "open": "s\"", "close": "\"", "notIn": ["string", "comment"] }
	],
	"surroundingPairs": [
		["{", "}"],
		["[", "]"],
		["(", ")"],
		["%", "%"],
		["&", "&"],
		["|", "|"],
		["\"", "\""]
	],
	"wordPattern": "[a-zA-Z0-9_'?]+",
	"": "|(?<=\\s)\\-[0-9]+"
}