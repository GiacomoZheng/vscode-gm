{
    "name": "gm",
    "displayName": "GM",
    "description": "GM support for Visual Studio Code",
    "version": "0.0.1",
    "publisher": "giacomo",
    "engines": {
        "vscode": "^1.25.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "repository": {
		"type": "git",
		"url": "https://github.com/GiacomoZheng/vscode-gm.git"
    },
	"icon": "icon.png",
    "contributes": {
        "languages": [{
            "id": "gm",
            "aliases": ["GM", "gm"],
            "extensions": [".gm","gm"],
            "configuration": "./language-configuration.json"
        }],
        "grammars": [{
            "language": "gm",
            "scopeName": "source.gm",
            "path": "./syntaxes/gm.tmLanguage.json"
        }],
		"snippets": [
			{
				"language": "gm",
				"path": "./snippets/gm.json"
			}
		],
		"configurationDefaults": {
			"[gm]": {
				"editor.insertSpaces": false
			}
		}
    }
}