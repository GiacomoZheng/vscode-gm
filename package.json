{
    "name": "gm",
    "displayName": "GM",
    "description": "GM support for Visual Studio Code",
    "version": "1.0.2",
    
	"icon": "images/icon.png",
    "engines": {
        "vscode": "^1.24.0"
    },
    "categories": [
        "Programming Languages",
        "Snippets",
        "Themes"
    ],
    
    "_uncompleted": {
        "main": "./out/gmMain",
        "activationEvents": [
            "*"
        ]
    },

    "publisher": "giacomozheng",
    "repository": {
		"type": "git",
		"url": "https://github.com/GiacomoZheng/vscode-gm.git"
    },

    "contributes": {
        "languages": [
            {
                "id": "gm",
                "aliases": ["GM", "gm"],
                "extensions": [".gm"],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "gm",
                "scopeName": "source.gm",
                "path": "./syntaxes/gm.tmLanguage.json"
            }
        ],
		"snippets": [
			{
				"language": "gm",
				"path": "./snippets/gm.json"
			}
        ],
        "themes": [
            {
                "label": "Light (Visual Studio) - gm",
                "uiTheme": "vs",
                "path": "./themes/gm-light_vs.json"
            },
            {
                "label": "Light+ (default light) - gm",
                "uiTheme": "vs",
                "path": "./themes/gm-light_plus.json"
            },
            {
                "label": "Dark (Visual Studio) - gm",
                "uiTheme": "vs-dark",
                "path": "./themes/gm-dark_vs.json"
            },
            {
                "label": "Dark+ (default dark) - gm",
                "uiTheme": "vs-dark",
                "path": "./themes/gm-dark_plus.json"
            },
            {
                "label": "High Contrast - gm",
                "uiTheme": "hc-black",
                "path": "./themes/gm-hc_black.json"
            }
        ],
        "commands": [],
        "keybindings":[],

		"configurationDefaults": {
			"[gm]": {
                "editor.insertSpaces": false
            }
		}
    }
}