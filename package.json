{
    "name": "gm",
    "displayName": "GM",
    "description": "GM support for Visual Studio Code",
    "version": "0.0.1",
    
	"icon": "images/icon.png",
    "engines": {
        "vscode": "^1.25.0"
    },
    "categories": [
        "Programming Languages"
    ],
    
    "main": "./out/gmMain",
    "activationEvents": [
        "*"
    ],

    "publisher": "giacomo",
    "repository": {
		"type": "git",
		"url": "https://github.com/GiacomoZheng/vscode-gm.git"
    },

    "contributes": {
        "languages": [
            {
                "id": "gm",
                "aliases": ["GM", "gm"],
                "extensions": [".gm"],
                "filenames": ["gm"],
                "configuration": "./language-configuration.json"
            },
            {
                "id": "pstree",
                "aliases": ["PStree"],
                "extensions": [".pstree"]
            }
        ],
        "grammars": [
            {
                "language": "gm",
                "scopeName": "source.gm",
                "path": "./syntaxes/gm.tmLanguage.json"
            },
            {
                "language": "pstree",
                "scopeName": "source.pstree",
                "path": "./syntaxes/pstree.tmLanguage.json"
            }
        ],
		"snippets": [
			{
				"language": "gm",
				"path": "./snippets/gm.json"
			}
        ],
        "commands": [
            {
                "command": "pstree.showPreview",
                "title": "%pstree.preview%",
                "category": "Pstree"
            }
        ],
        "keybindings":[
            {
                "key": "ctrl+shift+v",
                "command": "pstree.showPreview",
                "when": "editorLangId == 'pstree'"
            }
        ],
		"configurationDefaults": {
			"[gm]": {
				"editor.insertSpaces": false
            },
            "[pstree]": {
                "files.encoding": "utf16le",
                "editor.insertSpaces": true,
                "editor.tabSize": 2
            }
		}
    }
}